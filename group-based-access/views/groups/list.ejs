<div>
	<br><br><br>
	<div class='ui container'>
		<h3>List of Groups
			<form action="/groups/create" method="POST" class="ui form" style="float:right">
				<div class="fields">
					<div class="field">
						<input type="text" placeholder="Name" name="name">
					</div>
					<div class="field">
						<select name="users" class="multi-select search" multiple>
							<option value="" disabled="disabled" selected="selected" >Select Users</option>
							<% users.forEach(function(user,index) {%>
								<option name="user" value="<%= user.id %>"><%= user.name %></option>
							<% }) %>   
						</select>
					</div>
					<div class="field">
						<button class="ui button" type="submit">Submit</button>
					</div>
				</div>
			</form>
		</h3>
		<table class="ui celled structured table">
			<thead>
				<tr>
					<th>ID</th>
					<th class="single line">Name</th>
					<th class="single line">Users</th>
				</tr>
			</thead>
			<tbody>
				<% groups.forEach(function(group){%>
					<tr>
						<td><%=group.id%></td>
						<td>
							<%= group.name %>
						</td>
						<td>
							<% if(group.users){ %>
                                <% group.users.forEach(function(user,index) {%>
                                    <button class="mini ui basic button" style="margin-bottom: 5px;border: 1px solid #00b5ad!important">
                                        <%= user.name %> 
                                    </button>
                                <% }) %>  
                            <%}%>
						</td>
					</tr>
				<%})%>
			</tbody>
		</table>
	</div>
	<br><br><br>
</div>
