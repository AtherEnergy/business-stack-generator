<div class="ui container">
        <div class="ui middle aligned one column centered grid">
            <div class="sixteen wide mobile six wide computer column" style="margin-top:100px">
                <center>
                    <h2 class="ui black image header">Reset your password</h2>
                </center>
                <br>
                <form class="ui large form" method="POST">
                    <div class="ui stacked segment">
                        <div class="field">
                            <div class="ui big left icon input">
                                <i class="user icon"></i>
                                <input type="password" name="password" placeholder="New Password" required>
                            </div>
                        </div>
                        <button class="ui green button" type="submit">Reset</button>
                    </div>
                </form>
                <% if(error){ %>
                    <div class="ui error message">
                        <%=error%>
                    </div>
                    <% }else if(message){ %>
                    <div class="ui positive message">
                        <%=message%>
                    </div>
                    <% } %>
            </div>
        </div>
    </div>